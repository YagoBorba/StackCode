{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // VS Code Extension specific overrides
    "module": "CommonJS",
    "target": "ES2020",
    "outDir": "out",
    "lib": ["ES2020", "DOM"], // Add DOM for console and other browser APIs
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "types": ["jest", "node", "vscode"],
    // Override base config for VS Code extensions
    "declaration": false, // Not needed for extensions
    "composite": false    // Not needed for extensions
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "out", "**/*.test.ts"]
}
