{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "outDir": "out",
    "lib": ["ES2020", "DOM"], 
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "types": ["jest", "node", "vscode"],
    "declaration": false, 
    "composite": false    
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "out",
    "dist", 
    "**/*.test.ts",
    "src/webview-ui"
  ]
}